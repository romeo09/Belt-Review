<h1>Becme A New Member Of  Events Dojo!</h1>

<h3>Please Complete The Form Below:</h3>

<div class="errors">
      <% if flash[:errors] %>
      <h4><%= flash[:errors] %></h4>
      <%end%>
</div>

<form class="new" action="/users" method="post">
   <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

   <label for="fname">First Name: <input type="name" name="user[first_name]" placeholder="Enter your  first name"></label><br><br>
   <label for="lname">Last Name: <input type="name" name="user[last_name]" placeholder="Enter your last name"></label><br><br>
   <label for="email">Email: <input type="email" name="user[email]" placeholder="Enter your email address here"></label><br><br>
   <label for="city">City: <input type="name" name="user[city]" placeholder="Enter your city here"></label><br><br>
   <label for="state">State:</label> <%= select_tag :state, options_for_select(us_states), :name => "user[state]" %><br><br>
   <label for="password">Password: <input type="password" name="user[password]" placeholder="Enter your password here">*password MUST be at least 8 characters</label><br><br>
   <label for="password_confirmation">Confirm Password: <input type="password" name="user[password_confirmation]" placeholder="Password MUST match"></label><br><br>

   <input type="submit" value="Become A New Member!!">
</form><hr>

<br><br><button type="button" name="home"><a href="/sessions/index">Home Page</a></button>
